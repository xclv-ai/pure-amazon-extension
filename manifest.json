{
  "manifest_version": 3,
  "name": "POKPOK.AI - Tone Analysis v2.6.0",
  "version": "2.6.0",
  "description": "Advanced brand voice analysis using Nielsen's 4-dimensional framework. Analyze webpage content with comprehensive linguistic insights.",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "side_panel": {
    "default_path": "analysis-simple.html"
  },

  "permissions": [
    "sidePanel",
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "*://*/*"
  ],

  "action": {
    "default_title": "Open POKPOK.AI Tone Analysis",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content-script.js"],
      "css": ["content-styles.css"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "analysis-simple.html",
        "analysis.js",
        "lib/compromise.min.js",
        "styles/*"
      ],
      "matches": ["*://*/*"]
    }
  ]
}